<% if signed_in? %>
  <table class="front" summary="For signed-in members">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
         <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/member_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>CHSDESK</h1>

  <p>
    This is the home page for CHSDesk--
    <a href="http://lateralview.in/">Housing Society Management</a>
     application.
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
